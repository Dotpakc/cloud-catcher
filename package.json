{
  "name": "cloud-catcher",
  "version": "1.0.0",
  "description": "A ComputerCraft terminal renderer on the web",
  "main": "src/index.js",
  "config": {
    "server": "cloud-catcher.squiddev.cc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SquidDev-CC/cloud-catcher.git"
  },
  "keywords": [
    "computercraft"
  ],
  "author": "SquidDev",
  "license": "MIT",
  "scripts": {
    "build:setup": "node tools/setup.js",
    "build:tsc": "tsc --project .",
    "build:rollup": "rollup -c",
    "build:lua": "lua tools/make.lua",
    "build": "npm run build:setup && npm run build:tsc && npm run build:rollup && npm run build:lua",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "host": "node -r esm build/typescript/server"
  },
  "dependencies": {
    "diff": "^4.0.2",
    "esm": "^3.2.25",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "@rollup/plugin-url": "^4.0.2",
    "@types/diff": "^4.0.2",
    "@types/ws": "^7.2.3",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "cc-web-term": "github:SquidDev-CC/cc-web-term",
    "eslint": "^6.8.0",
    "monaco-editor": "^0.20.0",
    "postcss-selector-parser": "^6.0.2",
    "preact": "^10.4.0",
    "requirejs": "^2.3.6",
    "rollup": "^1.32.1",
    "rollup-plugin-license": "^2.0.0",
    "rollup-plugin-postcss": "^2.5.0",
    "terser": "^4.6.11",
    "typescript": "^3.8.3",
    "uglifycss": "0.0.29"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.1",
    "utf-8-validate": "^5.0.2"
  }
}
